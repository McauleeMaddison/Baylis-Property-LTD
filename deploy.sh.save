#!/bin/bash
# Quick deploy script for Baylis-Property-LTD

# Move into project dir
cd /workspaces/Baylis-Property-LTD || exit 1

# Stage everything
git add .

# Disable commit signing (avoids GPG issues)
git config --global commit.gpgsign false

# Set your Git identity (use SAME email as your GitHub account)
git config --global user.name "McauleeMaddison" git config --global user.email 
"your_email@users.noreply.github.com"

# Commit with timestamp message
git commit -m "Auto-deploy: $(date '+%Y-%m-%d %H:%M:%S')"

# Push to GitHub
git push origin main

echo "âœ… Deploy complete!"
